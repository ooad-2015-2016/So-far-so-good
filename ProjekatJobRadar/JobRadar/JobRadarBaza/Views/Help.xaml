<Page
    x:Class="JobRadar.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JobRadar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/SlikaJobRadar.jpg"/>
        </Grid.Background>
        <Image x:Name="image" Source="/Assets/LOGO2.png" HorizontalAlignment="Left" Height="223" Margin="511,38,0,0" VerticalAlignment="Top" Width="272" RenderTransformOrigin="0.69,0.49"/>
        <TextBlock x:Name="textBox" HorizontalAlignment="Center" Margin="202,266,178,0" TextWrapping="Wrap" Text="Naša ideja je bila napraviti aplikaciju koja kroz svoje
funkcionalnosti omogućava poslodavcima da nađu pravi profil ljudi koje traže,
ali također i nezaposlenima da budu u toku sa konkursima i potražnjom. Akteri
u našem sistemu su registrovani (ne)zaposleni, poslodavac, gost, administrator
i sistem. Sistem omogućava gostima pregled konkursa, registrovanim
tragačima za poslom pregled i prijavu na konkurs, poslodavcima objavu i
menadžment konkursa, te mnoge druge funkcionalnosti." VerticalAlignment="Top" Width="900" Height="217" FontFamily="Century Gothic" FontSize="24"/>
    </Grid>
</Page>
